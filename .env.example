# ============================================
# BANWEE UNIFIED ENVIRONMENT VARIABLES (EXAMPLE)
# ============================================

# ============================================
# GENERAL
# ============================================
ENVIRONMENT=production
DOMAIN=api.banwee.com

# ============================================
# DYNAMIC URLS - Environment Specific
# ============================================
# Set ENVIRONMENT to 'local' for development or 'production' for production

# Development URLs (used when ENVIRONMENT=local)
FRONTEND_URL_DEV=http://localhost:5173
BACKEND_URL_DEV=http://localhost:8000
BACKEND_CORS_ORIGINS_DEV=http://localhost:5173,http://0.0.0.0:5173,http://127.0.0.1:5173

# Production URLs (used when ENVIRONMENT=production)
FRONTEND_URL_PROD=https://www.banwee.com
BACKEND_URL_PROD=https://api.banwee.com
BACKEND_CORS_ORIGINS_PROD=https://www.banwee.com,https://banwee.com

# Dynamic URLs (automatically set based on ENVIRONMENT)
FRONTEND_URL=https://www.banwee.com
BACKEND_URL=https://api.banwee.com
BACKEND_CORS_ORIGINS=https://www.banwee.com,https://banwee.com

# ============================================
# FRONTEND - Environment Specific
# ============================================
# Development Frontend URLs
VITE_API_BASE_URL_DEV=http://localhost:8000/api/v1
VITE_WS_URL_DEV=ws://localhost:8000/v1/ws
VITE_APP_URL_DEV=http://localhost:5173

# Production Frontend URLs
VITE_API_BASE_URL_PROD=https://api.banwee.com/api/v1
VITE_WS_URL_PROD=wss://api.banwee.com/v1/ws
VITE_APP_URL_PROD=https://www.banwee.com

# Dynamic Frontend URLs (automatically set based on ENVIRONMENT)
VITE_API_BASE_URL=https://api.banwee.com/api/v1
VITE_WS_URL=wss://api.banwee.com/v1/ws
VITE_APP_NAME=Banwee
VITE_APP_URL=https://www.banwee.com

# ============================================
# DATABASE - PostgreSQL Optimized Configuration
# ============================================
POSTGRES_USER=banwee
POSTGRES_PASSWORD=banwee_password
POSTGRES_SERVER=postgres
POSTGRES_PORT=5432
POSTGRES_DB=banwee_db

# Environment-specific database URLs
POSTGRES_DB_URL_DEV=postgresql+asyncpg://banwee:banwee_password@localhost:5432/banwee_db
POSTGRES_DB_URL_PROD=postgresql+asyncpg://banwee:banwee_password@postgres:5432/banwee_db

# Dynamic database URL (automatically set based on ENVIRONMENT)
POSTGRES_DB_URL=postgresql+asyncpg://banwee:banwee_password@postgres:5432/banwee_db

# PostgreSQL Performance Settings
POSTGRES_MAX_CONNECTIONS=100
POSTGRES_SHARED_BUFFERS=256MB
POSTGRES_EFFECTIVE_CACHE_SIZE=1GB
POSTGRES_WORK_MEM=4MB
POSTGRES_MAINTENANCE_WORK_MEM=64MB
POSTGRES_CHECKPOINT_COMPLETION_TARGET=0.9
POSTGRES_WAL_BUFFERS=16MB
POSTGRES_RANDOM_PAGE_COST=1.1
POSTGRES_EFFECTIVE_IO_CONCURRENCY=200

# Connection Pool Settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# ============================================
# REDIS
# ============================================
REDIS_URL=redis://redis:6379/0

# ============================================
# KAFKA & REDIS - Enhanced Configuration
# ============================================
# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_URL_DEV=redis://localhost:6379/0
REDIS_URL_PROD=redis://redis:6379/0

# Redis Cart Configuration with TTL
REDIS_CART_TTL_GUEST=1800        # 30 minutes for guest users
REDIS_CART_TTL_USER=259200       # 3 days for logged-in users
REDIS_CART_EXTEND_ON_ADD=true    # Extend TTL when items are added

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:29092
KAFKA_BOOTSTRAP_SERVERS_DEV=localhost:9092
KAFKA_BOOTSTRAP_SERVERS_PROD=kafka:29092

# Kafka Topics - Detailed Configuration
KAFKA_TOPIC_EMAIL=banwee-email-notifications
KAFKA_TOPIC_NOTIFICATION=banwee-user-notifications
KAFKA_TOPIC_ORDER=banwee-order-events
KAFKA_TOPIC_NEGOTIATION=banwee-negotiation-events
KAFKA_TOPIC_PAYMENT=banwee-payment-events
KAFKA_TOPIC_CART=banwee-cart-events
KAFKA_TOPIC_INVENTORY=banwee-inventory-events
KAFKA_TOPIC_WEBSOCKET=banwee-websocket-events
KAFKA_TOPIC_REAL_TIME=banwee-real-time-notifications

# Kafka Consumer Groups
KAFKA_CONSUMER_GROUP_BACKEND=banwee-backend-consumers
KAFKA_CONSUMER_GROUP_SCHEDULER=banwee-scheduler-consumers
KAFKA_CONSUMER_GROUP_NEGOTIATOR=banwee-negotiator-consumers
KAFKA_CONSUMER_GROUP_WEBSOCKET=banwee-websocket-consumers

# Kafka Configuration - Performance & Reliability
KAFKA_AUTO_OFFSET_RESET=earliest
KAFKA_ENABLE_AUTO_COMMIT=true
KAFKA_MAX_POLL_RECORDS=500
KAFKA_SESSION_TIMEOUT_MS=30000
KAFKA_HEARTBEAT_INTERVAL_MS=10000
KAFKA_RETRY_BACKOFF_MS=1000
KAFKA_MAX_RETRIES=3
KAFKA_REQUEST_TIMEOUT_MS=30000
KAFKA_DELIVERY_TIMEOUT_MS=120000
KAFKA_BATCH_SIZE=16384
KAFKA_LINGER_MS=5
KAFKA_COMPRESSION_TYPE=snappy
KAFKA_ACKS=all



