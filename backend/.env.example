# ============================================
# BANWEE BACKEND CONFIGURATION
# ============================================
# This file works for both local development and Docker environments

# PostgreSQL Database Configuration
# For Docker: Use service name 'postgres' as host
# For Local: Use 'localhost' as host
POSTGRES_USER=banwee
POSTGRES_PASSWORD=banwee_password
POSTGRES_SERVER=postgres
POSTGRES_PORT=5432
POSTGRES_DB=banwee_db
POSTGRES_DB_URL=postgresql+asyncpg://banwee:banwee_password@postgres:5432/banwee_db

# For local development (non-Docker), change POSTGRES_SERVER and POSTGRES_DB_URL to:
# POSTGRES_SERVER=localhost
# POSTGRES_DB_URL=postgresql+asyncpg://banwee:banwee_password@localhost:5432/banwee_db

# Redis Configuration
# For Docker: Use service name 'redis' as host
# For Local: Use 'localhost' as host
REDIS_URL=redis://redis:6379/0
# For local development (non-Docker), change to:
# REDIS_URL=redis://localhost:6379/0

# Kafka Configuration
# For Docker: Use service name 'kafka' as host
# For Local: Use 'localhost' as host
KAFKA_BOOTSTRAP_SERVERS=kafka:29092
# For local development (non-Docker), change to:
# KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# Kafka Topic Names
KAFKA_TOPIC_EMAIL=banwee-emails
KAFKA_TOPIC_NOTIFICATION=banwee-notifications
KAFKA_TOPIC_ORDER=banwee-orders
KAFKA_TOPIC_NEGOTIATION=banwee-negotiations
KAFKA_TOPIC_PAYMENT=banwee-payments

# Kafka Consumer Groups
KAFKA_CONSUMER_GROUP_BACKEND=banwee-backend-consumers
KAFKA_CONSUMER_GROUP_SCHEDULER=banwee-scheduler-consumers
KAFKA_CONSUMER_GROUP_NEGOTIATOR=banwee-negotiator-consumers

# Kafka Configuration Settings
KAFKA_AUTO_OFFSET_RESET=earliest
KAFKA_ENABLE_AUTO_COMMIT=true
KAFKA_MAX_POLL_RECORDS=500
KAFKA_SESSION_TIMEOUT_MS=30000
KAFKA_HEARTBEAT_INTERVAL_MS=10000
KAFKA_RETRY_BACKOFF_MS=1000
KAFKA_MAX_RETRIES=3
KAFKA_REQUEST_TIMEOUT_MS=30000

# Application Settings
DOMAIN=localhost
ENVIRONMENT=local
FRONTEND_URL=http://localhost:5173

# CORS Allowed Origins (comma separated)
BACKEND_CORS_ORIGINS=http://localhost:5173,http://0.0.0.0:5173,http://127.0.0.1:5173

# Security Configuration
# IMPORTANT: Generate a secure random key for production!
# You can generate one with: openssl rand -hex 32
SECRET_KEY=banwee-dev-secret-key-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Mailgun Email Configuration
# Get your keys from: https://app.mailgun.com/
MAILGUN_API_KEY=your_mailgun_api_key_here
MAILGUN_DOMAIN=mg.yourdomain.com
MAILGUN_FROM_EMAIL=Banwee <noreply@yourdomain.com>

# Stripe Payment Configuration
# Get your keys from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# Email Configuration (SMTP) - Optional, use Mailgun instead
# For Gmail: Enable 2FA and create an App Password
SMTP_HOSTNAME=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_FROM_EMAIL=noreply@banwee.com
SMTP_FROM_NAME=Banwee

# Social Authentication (Optional)
# Google OAuth: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Facebook OAuth: https://developers.facebook.com/
FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here

# TikTok OAuth: https://developers.tiktok.com/
TIKTOK_CLIENT_KEY=your_tiktok_client_key_here
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret_here

# Optional External Services (Leave empty if not using)
SMS_API_KEY=
SMS_API_URL=
TELEGRAM_BOT_TOKEN=