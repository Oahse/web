# ============================================
# BANWEE BACKEND ENVIRONMENT CONFIGURATION
# ============================================
# Copy this file to .env and fill in the appropriate values

# =============================================================================
# GENERAL SETTINGS
# =============================================================================
ENVIRONMENT=local
DOMAIN=localhost

# =============================================================================
# URL CONFIGURATION
# =============================================================================
BACKEND_URL=http://localhost:8000
BACKEND_CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://localhost:3000

# =============================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# =============================================================================
POSTGRES_DB_URL=postgresql://user:password@host:port/database
POSTGRES_USER=banwee
POSTGRES_PASSWORD=banwee_password
POSTGRES_DB=banwee_db

# Database connection pool settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
ENABLE_REDIS=true
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_ENABLED=true
REDIS_RATELIMIT_ENABLED=true
REDIS_CACHE_TTL=3600
REDIS_CART_TTL_GUEST=1800
REDIS_CART_TTL_USER=259200
REDIS_CART_EXTEND_ON_ADD=true

# =============================================================================
# BACKGROUND TASKS CONFIGURATION (ARQ)
# =============================================================================
ENABLE_ARQ=true
ARQ_REDIS_URL=redis://localhost:6379/0

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
SECRET_KEY=your_secret_key_here_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
FORCE_LOGOUT_ON_PASSWORD_CHANGE=true

# =============================================================================
# STRIPE PAYMENT CONFIGURATION
# =============================================================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
MAILGUN_API_KEY=your_mailgun_api_key
MAILGUN_DOMAIN=mg.yourdomain.com
MAILGUN_FROM_EMAIL=Banwee <noreply@yourdomain.com>

# =============================================================================
# SOCIAL AUTHENTICATION
# =============================================================================
FACEBOOK_APP_SECRET=your_facebook_app_secret
TIKTOK_CLIENT_KEY=your_tiktok_client_key
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret

# =============================================================================
# MESSAGING SERVICES
# =============================================================================
TELEGRAM_BOT_TOKEN=
WHATSAPP_ACCESS_TOKEN=
PHONE_NUMBER_ID=

# =============================================================================
# ADMIN CONFIGURATION
# =============================================================================
ADMIN_USER_ID=your_admin_uuid_here

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================
NOTIFICATION_CLEANUP_DAYS=30
NOTIFICATION_CLEANUP_INTERVAL_SECONDS=86400
